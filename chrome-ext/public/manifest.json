{
  "manifest_version": 3,
  "name": "AI to VSCode Bridge",
  "version": "1.0.1",
  "description": "旨在打通 AI 网页对话与 VS Code 之间的壁垒，一键发送代码块、对话内容至 VS Code 并自动保存。",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}